<h3>Sign up</h3>

<div id="form"></div>
  <form action="/signup" method="POST">
 
    <label> Username
      <input type="text" name="username" placeholder="username" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="password" />
    </label>
 
    <button type="submit">sign up!</button>
 
    {{#if errorMessage}}
        <p style="color:red;">{{errorMessage}}</p>
    {{/if}}
  </form>