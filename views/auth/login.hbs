<h3>Login</h3>

<div id="form">
  <form action="/login" method="POST">
 
    <label> Username
      <input type="username" name="username" placeholder="Username" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="******" />
    </label>
 
    <button type="submit">Login</button>
 
    {{#if errorMessage}}
        <p style="color:red;">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>